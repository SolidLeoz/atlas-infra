apiVersion: 1
groups:
  - orgId: 1
    name: atlas-alerts
    folder: Atlas Alerts
    interval: 1m
    rules:
      - uid: device_offline
        title: Device Offline
        condition: C
        data:
          - refId: A
            relativeTimeRange:
              from: 300
              to: 0
            datasourceUid: InfluxDB
            model:
              intervalMs: 1000
              maxDataPoints: 43200
              query: |
                from(bucket: "telemetry")
                  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)
                  |> filter(fn: (r) => r._measurement == "system" and r._field == "uptime")
                  |> last()
              refId: A
          - refId: B
            datasourceUid: __expr__
            model:
              conditions:
                - evaluator:
                    params: [0]
                    type: gt
                  operator:
                    type: and
                  query:
                    params: [A]
                  reducer:
                    params: []
                    type: last
                  type: query
              datasource:
                name: Expression
                uid: __expr__
              expression: A
              intervalMs: 1000
              maxDataPoints: 43200
              refId: B
              type: classic_conditions
          - refId: C
            datasourceUid: __expr__
            model:
              expression: B
              hide: false
              intervalMs: 1000
              maxDataPoints: 43200
              refId: C
              type: resample
        noDataState: Alerting
        execErrState: Error
        for: 5m
        annotations:
          summary: "Device {{ $labels.device }} is offline"
          description: "No telemetry received for more than 5 minutes from {{ $labels.device }}."
        labels:
          severity: critical
